<launch>
  <arg name="robot_name" default="$(env USER)"/>
  <arg name="model" default="burger"/>
  <arg name="move_forward_only" default="true"/>

  <!-- bringup turtlebot -->
  <include ns="$(arg robot_name)" file="$(find turtlebot3_bringup)/launch/turtlebot3_core.launch">
    <arg name="multi_robot_name" value="turtlebot_core" />
  </include>

  <!-- move_base -->
  <include file="$(find navlab_turtlebot_planning)/launch/move_base_multi.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="robot_name" value="$(arg robot_name)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    <arg name="odom_topic" value="$(arg robot_name)_tf/odom"/>

  </include>
</launch>
